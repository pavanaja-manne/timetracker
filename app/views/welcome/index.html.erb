<% if session[:user_id] %>
  <%@user = User.find(session[:user_id]) %>

  <div class="row-fluid">
    <header class="span12 hero-unit">
      <%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>

      <h2>Hi <%= @user.name %>, Please Enter The Time Sheets For <span id="currentMonth"/> </h2>
    </header>
  </div>

  <!-- **************************************************************************** -->
